<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.ixy.parallaxstickylistview.ParallaxStickyListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"
        android:fadingEdge="none" >
    </com.ixy.parallaxstickylistview.ParallaxStickyListView>

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_header_height"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_header" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_sticky"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_sticky_height"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/user_center_tv_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="STICKY"
            android:textSize="20dp" />
    </LinearLayout>

</FrameLayout>